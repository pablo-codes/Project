                 <a href="http://localhost:3000/add/:{{_id}}" target="_blank"> <svg xmlns="http://www.w3.org/2000/svg" height="48" width="48"><path d="M9 39H11.2L35.45 14.75L34.35 13.65L33.25 12.55L9 36.8ZM6 42V35.6L35.4 6.2Q36.25 5.35 37.525 5.375Q38.8 5.4 39.65 6.25L41.8 8.4Q42.65 9.25 42.65 10.5Q42.65 11.75 41.8 12.6L12.4 42ZM39.5 10.45 37.45 8.4ZM35.45 14.75 34.35 13.65 33.25 12.55 35.45 14.75Z"></path></svg> </a>
                
                 <a href="/delete-topic/:{{_id}}?pages={{page}}"> 
                      <svg xmlns="http://www.w3.org/2000/svg" height="48" width="48"><path d="M15 39H33Q33 39 33 39Q33 39 33 39V15H15V39Q15 39 15 39Q15 39 15 39ZM10.5 11V8H17.2L19.2 6H28.8L30.8 8H37.5V11ZM15 42Q13.8 42 12.9 41.1Q12 40.2 12 39V12H36V39Q36 40.2 35.1 41.1Q34.2 42 33 42ZM15 39H33Q33 39 33 39Q33 39 33 39H15Q15 39 15 39Q15 39 15 39Z"></path></svg>     
                </a>
            
            </td>
        </tr>
       {{/each}}
    </tbody>


    </table>
</div>
{{#if sum}}
      <div class="col-25"style="width:10%"> Page
        <select id="page" name="page" style="width:100%" onchange="opt(this)">
          {{#each sum}}
          <option value="{{num}}" class="optlink" style="width:100%" onclick="opt(this)" >{{num}}</option>
          {{/each}}
        </select>
      </div>
      {{/if}}
      {{#if fill}}
<div class="next">
    {{#each fill}}
    <a href="/all-topics?pages={{num}}"><button type="submit">{{num}}</button></a>
    {{/each}}
   </div>
{{/if}}
</div>



</body>
<script>
const opt = (event)=>{
    location.href= "/all-topics?pages="+event.value
}
</script>
</html>